<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cristianbaita.MusicMap.activities.LocationDetailsActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_top"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/burger"
        android:id="@+id/burgerImage"
        android:layout_alignBottom="@+id/toolbar_top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <com.example.cristianbaita.MusicMap.helper.DelayAutoCompleteTextView
            android:id="@+id/geo_autocomplete"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:imeOptions="flagNoExtractUi|actionSearch"
            android:inputType="textCapSentences"
            android:textColor="#000000"
            android:background="#FFFFFF"
            android:hint="Type here..."
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:dropDownWidth="fill_parent"
            android:layout_alignBottom="@+id/toolbar_top"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/geo_autocomplete_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/x"
            android:layout_above="@+id/map_fragment"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />





    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_location_details_layout">

        <FrameLayout
            android:layout_width="20dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:id="@+id/imageView"
                android:src="@drawable/location_location_details_layout"
                android:layout_gravity="top" />
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location Adress:"
                android:textStyle="bold"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45 Howard Street,CA,United States"
                android:id="@+id/textView2" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_location_details_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Music"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:id="@+id/textView3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jazz night from 11:30"
                android:layout_marginLeft="20dp"
                android:id="@+id/textView4" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_location_details_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance:"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:id="@+id/textView5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 km"
                android:layout_marginLeft="20dp"
                android:id="@+id/textView6" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_location_details_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fee Entrance"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:id="@+id/textView7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$10"
                android:layout_marginLeft="20dp"
                android:id="@+id/textView8" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_location_details_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservation"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:id="@+id/textView9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999 88 555"
                android:layout_marginLeft="20dp"
                android:id="@+id/textView10" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/pub_location_details_layout"></FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/background_location_details_layout">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="By foot"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView11" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="2 h"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView12" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/location_location_details_layout"></FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/background_location_details_layout">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="By car"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView13" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="30 min"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView14" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/location_location_details_layout"></FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/map_location_details_layout"></FrameLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="RESERVE NOW!"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/button"
        android:background="#ff6f00"
        android:layout_gravity="center_horizontal" />
</LinearLayout>

